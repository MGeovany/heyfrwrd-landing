---
import Sparkle from "./Sparkle.astro";
import EmailSubscription from "./EmailSubscription.astro";
import { Github, Instagram, Linkedin, Mail } from "@lucide/astro";
import { Sparkles } from "@lucide/astro";
---

<div class="relative overflow-hidden">
  <!-- Top left sparkle -->
  <div class="absolute top-24 left-4">
    <Sparkle size={20} className="text-[#683fe7]/50" />
  </div>

  <!-- Top right sparkles cluster -->
  <div class="absolute top-12 right-16">
    <div class="relative">
      <Sparkle size={40} className="text-[#683fe7]/40" />
      <div class="absolute top-6 left-6">
        <Sparkle size={20} className="text-[#683fe7]/40" />
      </div>
    </div>
  </div>

  <!-- Middle left sparkles -->
  <div class="absolute top-80">
    <div class="relative">
      <Sparkle size={28} className="text-[#683fe7]/30" />
      <div class="absolute top-6 left-6">
        <Sparkle size={14} className="text-[#683fe7]/30" />
      </div>
    </div>
  </div>

  <!-- bottom left sparkle -->
  <div class="absolute bottom-24 right-4">
    <Sparkle size={20} className="text-[#683fe7]/20" />
  </div>

  <!-- Main content -->
  <div class="flex flex-col items-center justify-start px-8 text-center">
    <!-- Stay Tuned badge -->
    <div
      class="flex items-center gap-2 bg-transparent rounded-md p-2 border border-gray-700/20 my-5"
    >
      <Sparkles size={14} class="text-gray-700/20" fill="currentColor" />
      <span class="text-gray-700 font-medium">Stay Tuned</span>
    </div>

    <!-- Heading -->
    <div class="max-w-5xl mb-8">
      <h1
        class="text-6xl md:text-7xl lg:text-8xl font-bold text-gray-900 leading-tight"
      >
        We are working on
      </h1>
      <div class="relative">
        <h1
          class="text-6xl md:text-7xl lg:text-8xl font-bold text-gray-900 leading-tight"
        >
          our <span class="text-[#683fe7] font-extrabold">Platform</span>
        </h1>
      </div>
    </div>

    <!-- Description -->
    <p
      class="flex text-gray-600 text-lg md:text-xl max-w-2xl mb-12 leading-relaxed mt-10"
    >
      We have something coming that is going to blow you away. Below is a sneak
      peek of what we offer. Check back often for our launch.
    </p>

    <!-- Subscription form -->
    <EmailSubscription />

    <!-- Iconos sociales -->
    <div class="flex items-center gap-3 mt-10 p-2">
      <a
        href="#"
        aria-label="Facebook"
        class="w-8 h-8 bg-white/80 hover:bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 border-white/40 shadow-md"
      >
        <Github class="text-gray-600 hover:text-gray-800" size={18} />
      </a>
      <a
        href="#"
        aria-label="Instagram"
        class="w-8 h-8 bg-white/80 hover:bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 border-white/40 shadow-md"
      >
        <Instagram class="text-gray-600 hover:text-gray-800" size={18} />
      </a>
      <a
        href="#"
        aria-label="LinkedIn"
        class="w-8 h-8 bg-white/80 hover:bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 border-white/40 shadow-md"
      >
        <Linkedin class="text-gray-600 hover:text-gray-800" size={18} />
      </a>
      <a
        href="#"
        aria-label="Twitter"
        class="w-8 h-8 bg-white/80 hover:bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 border-white/40 shadow-md"
      >
        <Mail class="text-gray-600 hover:text-gray-800" size={18} />
      </a>
    </div>
  </div>
</div>
