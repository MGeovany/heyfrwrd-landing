<div class="w-full max-w-md">
  <form
    id="email-form"
    class="flex bg-white rounded-2xl p-1 shadow-sm border border-gray-100"
  >
    <input
      id="email-input"
      type="email"
      placeholder="Enter your email"
      required
      class="flex-1 h-12 px-4 bg-transparent border-0 rounded-xl text-gray-700 placeholder:text-gray-300 focus:ring-0 focus:outline-none disabled:opacity-50 text-lg"
    />
    <button
      id="email-button"
      type="submit"
      disabled
      class="h-12 px-6 bg-[#683fe7] hover:bg-[#683fe7] text-white rounded-xl font-medium transition-colors duration-200 text-sm border-0 shadow-none"
    >
      Subscribe
    </button>
  </form>
</div>
