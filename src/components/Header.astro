---
import { Facebook, Instagram, Linkedin, Twitter } from "@lucide/astro";
import logo from "../assets/logo.png";
---

<header class="flex justify-between items-center p-6 md:p-8 w-full">
  <!-- Logo + Nombre -->
  <div class="flex items-center gap-3">
    <div class="w-10 h-10 bg-black rounded-xl flex items-center justify-center">
      <img
        src={logo.src}
        alt="heyfrwrd logo"
        fetchpriority="high"
        class="w-8 h-8"
      />
    </div>
    <span class="text-2xl font-bold text-gray-900 tracking-tight">
      heyfrwrd
    </span>
  </div>

  <!-- Iconos sociales -->
  <div class="flex items-center gap-3">
    <a
      href="#"
      aria-label="Facebook"
      class="w-10 h-10 bg-white/80 hover:bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 shadow-sm hover:shadow-md border border-white/40"
    >
      <Facebook class="text-gray-600 hover:text-gray-800" size={18} />
    </a>
    <a
      href="#"
      aria-label="Instagram"
      class="w-10 h-10 bg-white/80 hover:bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 shadow-sm hover:shadow-md border border-white/40"
    >
      <Instagram class="text-gray-600 hover:text-gray-800" size={18} />
    </a>
    <a
      href="#"
      aria-label="LinkedIn"
      class="w-10 h-10 bg-white/80 hover:bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 shadow-sm hover:shadow-md border border-white/40"
    >
      <Linkedin class="text-gray-600 hover:text-gray-800" size={18} />
    </a>
    <a
      href="#"
      aria-label="Twitter"
      class="w-10 h-10 bg-white/80 hover:bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 shadow-sm hover:shadow-md border border-white/40"
    >
      <Twitter class="text-gray-600 hover:text-gray-800" size={18} />
    </a>
  </div>
</header>
